name: Code quality

on:
    push:
        branches:
            - main
            - develop
    pull_request:
        branches:
            - main
            - develop

jobs:
    lint-and-test:
        runs-on: ubuntu-latest

        steps:
            - name: Checkout code
                uses: actions/checkout@v2

            - name: Set up Python
                uses: actions/setup-python@v2
                with:
                    python-version: '3.9'

            - name: Install uv
                run: |
                    python -m pip install --upgrade pip
                    pip install uv

            - name: Install dependencies
                run: uv install

            - name: Run ruff linting
                run: uv run ruff .

            - name: Run tests
                run: uv run pytest
